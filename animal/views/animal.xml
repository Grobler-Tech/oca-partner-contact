<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Animal list View -->
    <record id="view_animal_list" model="ir.ui.view">
        <field name="name">animal.list</field>
        <field name="model">animal</field>
        <field name="arch" type="xml">
            <list>
                <field name="ref"/>
                <field name="name"/>
                <field name="gender"/>
                <field name="species_id"/>
                <field name="breed_id"/>
                <field name="color_id"/>
                <field name="neutered"/>
            </list></field>
    </record>
    <!-- Animal Form View -->
    <record id="view_animal_form" model="ir.ui.view">
        <field name="name">animal.form</field>
        <field name="model">animal</field>
        <field name="arch" type="xml">
            <form string="Animal">
                <sheet>
                    <widget bg_color="bg-danger" invisible="active" name="web_ribbon" title="Archived"/>
                    <field invisible="1" name="active"/>
                    <field class="oe_avatar" name="image" widget="image"/>
                    <div class="oe_title">
                        <label for="name" string="Animal"/>
                        <h1>
                            <div class="d-flex">
                                <!-- <field class="text-break" name="name" options="{'line_breaks': False}" widget="text" placeholder="e.g. Cheese Burger"/> -->
                                <field name="name" placeholder="e.g. Rambo"/>
                            </div>
                        </h1>
                        <field name="gender" options="{'horizontal': true}" widget="radio"/>
                    </div>
                    <notebook>
                        <page string="General Information" name="general_information">
                            <group id="main">
                                <group id="left">
                                    <field name="species_id"/>
                                    <field domain="[('species_id', '=', species_id)]" name="breed_id"/>
                                    <field domain="[('breed_id', '=', breed_id)]" name="color_id"/>
                                    <field name="size"/>
                                </group>
                                <group id="right">
                                    <field name="ref"/>
                                    <field name="weight"/>
                                    <field name="birth_date"/>
                                    <field name="neutered"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <!-- <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" options="{'post_refresh': 'recipients'}" widget="mail_thread"/>
                </div> -->
            </form></field>
    </record>
    <!-- Animal Kanban View -->
    <record id="view_animal_kanban" model="ir.ui.view">
        <field name="name">animal.kanban</field>
        <field name="model">animal</field>
        <field name="arch" type="xml">
            <kanban class="o_res_partner_kanban">
                <field name="id"/>
                <field name="image"/>
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                            <t t-if="record.image.raw_value">
                                <img class="o_kanban_image" t-att-alt="record.name" t-att-src="kanban_image('animal', 'image', record.id.raw_value)"/>
                            </t>
                            <t t-else="">
                                <img alt="Avatar" class="o_kanban_image" t-att-src='_s + "/animal/static/img/avatar.png"'/>
                            </t>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title oe_partner_heading">
                                    <field name="display_name"/>
                                </strong>
                                <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                <ul>
                                    <li t-if="record.gender.raw_value">
                                        <field name="gender"/>
                                    </li>
                                    <li t-if="record.species_id.raw_value and record.breed_id.raw_value">
                                        <field name="breed_id"/>
                                        <field name="species_id"/>
                                    </li>
                                </ul>
                                <div class="oe_kanban_partner_links"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban></field>
    </record>
    <!-- Search for animal -->
    <record id="view_animal_search" model="ir.ui.view">
        <field name="name">animal.search</field>
        <field name="model">animal</field>
        <field name="arch" type="xml">
            <search string="Animals">
                <field filter_domain="['|', ('name', 'ilike', self), ('ref', 'ilike', self)]" name="name" string="Name"/>
                <field name="species_id"/>
                <field name="breed_id"/>
                <field name="color_id"/>
                <field name="size"/>
                <separator/>
                <filter domain="[('gender', '=', 'female')]" name="female" string="Female"/>
                <filter domain="[('gender', '=', 'male')]" name="male" string="Male"/>
                <filter domain="[('gender', '=', 'hermaphrodite')]" name="hermaphrodite" string="Hermaphrodite"/>
                <separator/>
                <filter domain="[('active', '=', False)]" name="inactive" string="Archived"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter context="{'group_by': 'gender'}" domain="" name="gender" string="Gender"/>
                    <filter context="{'group_by': 'species_id'}" domain="" name="species_id" string="Species"/>
                    <filter context="{'group_by': 'breed_id'}" domain="" name="breed_id" string="Breed"/>
                    <filter context="{'group_by': 'color_id'}" domain="" name="color_id" string="Color"/>
                </group>
            </search></field>
    </record>
    <record id="action_animal" model="ir.actions.act_window">
        <field name="name">Animals</field>
        <field name="res_model">animal</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="view_animal_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create an animal
            </p></field>
    </record>
</odoo>
